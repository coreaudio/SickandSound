<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <title>Hausdienst Rangliste</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    table { width: 100%; border-collapse: collapse; }
    th, td { border: 1px solid #ccc; padding: 8px; text-align: center; }
    .gold { background: gold; }
    .silver { background: silver; }
    .bronze { background: #cd7f32; color: white; }
  </style>
</head>
<body>
  <h1>Hausdienst Rangliste</h1>
  <table>
    <thead>
      <tr><th>Platz</th><th>Person</th><th>Anzahl</th></tr>
    </thead>
    <tbody id="rangListe"></tbody>
  </table>
  <br>
  <button onclick="window.location.href='index.html'">Zur√ºck</button>

  <script>
    let history = JSON.parse(localStorage.getItem("hausdienstHistory")) || [];
    let counts = {};
    history.forEach(h => {
      counts[h.person] = (counts[h.person] || 0) + 1;
    });
    let ranking = Object.entries(counts).sort((a,b) => b[1]-a[1]);

    let tbody = document.getElementById("rangListe");
    ranking.forEach(([p,c], i) => {
      let tr = document.createElement("tr");
      tr.innerHTML = `<td>${i+1}</td><td>${p}</td><td>${c}</td>`;
      if (i===0) tr.classList.add("gold");
      if (i===1) tr.classList.add("silver");
      if (i===2) tr.classList.add("bronze");
      tbody.appendChild(tr);
    });
  </script>
</body>
</html>
